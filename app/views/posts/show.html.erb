<div class="container well">

  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> Ago
    | <button class="btn btn-sm btn-primary"><%= link_to 'Edit', edit_post_url %></button>
    | <button class="btn btn-sm btn-danger"><%= link_to 'Delete', post_url, method: :delete, data: {confirm: "Are you sure you want to delete this post?" } %></button>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>
</div>



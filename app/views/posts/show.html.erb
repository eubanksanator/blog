
<div class="col-md-offset-2 col-md-7">

  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> Ago
  </p>

  <p class="body well">
    <%= @post.body %>
  </p>

  <% if current_admin == Admin.first  %>
    <button class="btn btn-success"><%= link_to 'Edit', edit_post_url %></button>
    <button class="btn btn-danger"><%= link_to 'Delete', post_url, method: :delete, data: {confirm: "Are you sure you want to delete this post?" } %></button>
  <% end %>

    <button class="btn"><%= link_to 'Back', :back %></button>
</div>




